{
  "apps": [
    {
      "name": "evolution-evento",
      "script": "dist/main.js",
      "cwd": "/home/encuentrafacil/evolution-api",
      "instances": 1,
      "exec_mode": "fork",
      "max_memory_restart": "1536M",
      "node_args": "--max-old-space-size=1536",
      "env": {
        "NODE_ENV": "PROD",
        "PORT": "8080"
      },
      "error_file": "/home/encuentrafacil/logs/evolution-evento-error.log",
      "out_file": "/home/encuentrafacil/logs/evolution-evento-out.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
      "merge_logs": true,
      "autorestart": true,
      "watch": false,
      "max_restarts": 10,
      "min_uptime": "10s",
      "restart_delay": 4000,
      "kill_timeout": 5000,
      "listen_timeout": 10000,
      "shutdown_with_message": true
    }
  ]
}